<body>
<h1>Books</h1>
<table>
<thead>
<tr>
  <th>Title</th>
  <th>Body</th>
  <th colspan="3"></th>
</tr>
</thead>
<% @books.each do |book| %>
<tbody>
  <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
    <%= link_to 'show', book_path(book.id) %>
  </td>
  <td>
    <%= link_to 'edit', edit_book_path(book.id) %>
  </td>
  <td>
    <a data-confirm="Are you shre?" class="destroy_173776" rel="nofollow" data-method="delete" href="/books/173776">destroy</a>
  </td>
  </tr>
</tbody>
<% end %>
</table>

<h2>New Book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <h4></h4>
  <%= f.submit 'Create Book' %>
<% end %>
</body>
